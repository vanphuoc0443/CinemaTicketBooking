<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane styleClass="auth-container"
           prefWidth="1000" prefHeight="700"
           xmlns="http://javafx.com/javafx/25"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="fxcontroller.LoginController">

    <VBox styleClass="auth-card" spacing="16" alignment="CENTER">

        <!-- Branding -->
        <HBox spacing="8" alignment="CENTER">
            <Label text="沁ｬ" style="-fx-font-size: 32px;"/>
            <Label text="沚ｿ" style="-fx-font-size: 28px;"/>
        </HBox>
        <Label text="ﾄ雪ｺｷt Vﾃｩ Xem Phim" styleClass="auth-title"/>
        <Label text="ﾄ斉ハg nh蘯ｭp vﾃo tﾃi kho蘯｣n c盻ｧa b蘯｡n" styleClass="auth-subtitle"/>

        <!-- Gradient Divider -->
        <Region styleClass="gradient-divider" maxWidth="280"/>

        <!-- Form Fields -->
        <VBox spacing="12">
            <padding><Insets top="6"/></padding>
            <Label text="汨､  Tﾃｪn ﾄ惰ハg nh蘯ｭp" styleClass="text-secondary"/>
            <TextField fx:id="txtEmail" promptText="Nh蘯ｭp tﾃｪn ﾄ惰ハg nh蘯ｭp" styleClass="auth-field"/>

            <Label text="沐  M蘯ｭt kh蘯ｩu" styleClass="text-secondary"/>
            <PasswordField fx:id="txtPassword" promptText="Nh蘯ｭp m蘯ｭt kh蘯ｩu" styleClass="auth-field"/>
        </VBox>

        <!-- Error Label -->
        <Label fx:id="lblMessage" styleClass="auth-error"/>

        <!-- Buttons -->
        <VBox spacing="10" alignment="CENTER">
            <Button fx:id="btnLogin" text="沁  ﾄ斉ハg nh蘯ｭp" onAction="#handleLogin"
                    styleClass="btn-primary" prefWidth="320" prefHeight="44"/>

            <HBox spacing="6" alignment="CENTER">
                <Label text="Chﾆｰa cﾃｳ tﾃi kho蘯｣n?" styleClass="text-muted"/>
                <Button fx:id="btnRegister" text="ﾄ斉ハg kﾃｽ" onAction="#goToRegister"
                        styleClass="btn-text"/>
            </HBox>

            <Button text="Quﾃｪn m蘯ｭt kh蘯ｩu?" onAction="#goForgotPassword"
                    styleClass="btn-text" style="-fx-font-size: 12px;"/>
        </VBox>
    </VBox>
</StackPane>
