<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefWidth="390.0" prefHeight="844.0"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="fxcontroller.SeatController"
            style="-fx-background-color: linear-gradient(to bottom, #0f0f1a, #1a1a2e);">

    <VBox prefWidth="390.0" prefHeight="844.0" spacing="15"
          alignment="TOP_CENTER">

        <padding>
            <Insets top="20" right="15" bottom="20" left="15"/>
        </padding>

        <!-- Title -->
        <Label text="Chọn Ghế"
               style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;"/>

        <!-- Movie Info Card -->
        <VBox spacing="5"
              style="-fx-background-color: #16213e; -fx-background-radius: 15;">
            <padding>
                <Insets top="12" right="12" bottom="12" left="12"/>
            </padding>

            <Label fx:id="movieTitleLabel"
                   text="Avengers: Endgame"
                   style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;"/>

            <Label fx:id="showtimeLabel"
                   text="20:00 | Phòng 3"
                   style="-fx-text-fill: #bbbbbb; -fx-font-size: 14px;"/>
        </VBox>

        <!-- Screen -->
        <StackPane prefHeight="80">
            <Label text="MÀN HÌNH"
                   style="-fx-text-fill: #00fff5; -fx-font-size: 16px; -fx-font-weight: bold;"/>
            <style>
                -fx-background-color: linear-gradient(to bottom, #00fff5, transparent);
                -fx-background-radius: 100 100 0 0;
            </style>
        </StackPane>

        <!-- Seat Grid -->
        <GridPane fx:id="seatGrid"
                  hgap="8"
                  vgap="10"
                  alignment="CENTER">
        </GridPane>

        <!-- Legend -->
        <HBox spacing="20" alignment="CENTER">
            <HBox spacing="5" alignment="CENTER">
                <Button prefWidth="20" prefHeight="20"
                        style="-fx-background-color: #3a3a3a; -fx-background-radius: 5;"/>
                <Label text="Trống" style="-fx-text-fill: white;"/>
            </HBox>

            <HBox spacing="5" alignment="CENTER">
                <Button prefWidth="20" prefHeight="20"
                        style="-fx-background-color: #ff4d4d; -fx-background-radius: 5;"/>
                <Label text="Đã đặt" style="-fx-text-fill: white;"/>
            </HBox>

            <HBox spacing="5" alignment="CENTER">
                <Button prefWidth="20" prefHeight="20"
                        style="-fx-background-color: #ffd369; -fx-background-radius: 5;"/>
                <Label text="Đang chọn" style="-fx-text-fill: white;"/>
            </HBox>
        </HBox>

        <!-- Selected Seats -->
        <Label fx:id="selectedSeatLabel"
               text="Ghế đã chọn: "
               style="-fx-text-fill: #00fff5; -fx-font-size: 14px;"/>

        <!-- Total Price -->
        <Label fx:id="totalPriceLabel"
               text="Tổng tiền: 0 VND"
               style="-fx-text-fill: #ffd369; -fx-font-size: 18px; -fx-font-weight: bold;"/>

        <!-- Continue Button -->
        <Button text="Tiếp tục thanh toán"
                onAction="#handleContinuePayment"
                prefWidth="340"
                prefHeight="50"
                style="-fx-background-color: linear-gradient(to right, #ff4d4d, #ff9a00);
                       -fx-text-fill: white;
                       -fx-font-size: 16px;
                       -fx-font-weight: bold;
                       -fx-background-radius: 25;
                       -fx-cursor: hand;"/>
    </VBox>

</AnchorPane>