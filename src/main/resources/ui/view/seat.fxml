<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="fxcontroller.SeatController"
            prefWidth="360" prefHeight="700"
            style="-fx-background-color: #121212;">

    <Label fx:id="screenLabel" text="SCREEN"
           layoutX="140" layoutY="20"
           style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;" />

    <Separator layoutX="30" layoutY="50" prefWidth="300"/>

    <GridPane fx:id="seatGrid" layoutX="30" layoutY="90" hgap="12" vgap="20">
        <!-- Seats will be loaded dynamically by SeatController -->
    </GridPane>

    <!-- Legend -->
    <HBox layoutX="50" layoutY="400" spacing="15">
        <HBox spacing="5">
            <Button style="-fx-background-color: #4caf50;" prefWidth="20" prefHeight="20"/>
            <Label text="Available" style="-fx-text-fill:white;"/>
        </HBox>
        <HBox spacing="5">
             <Button style="-fx-background-color: #d32f2f;" prefWidth="20" prefHeight="20"/>
             <Label text="Booked" style="-fx-text-fill:white;"/>
        </HBox>
         <HBox spacing="5">
             <Button style="-fx-background-color: #fdd835;" prefWidth="20" prefHeight="20"/>
             <Label text="Selected" style="-fx-text-fill:white;"/>
        </HBox>
    </HBox>

    <HBox layoutX="30" layoutY="450" spacing="20">
        <Label fx:id="selectedCountLabel" text="Selected: 0" style="-fx-text-fill: white; -fx-font-size: 14px;"/>
        <Label fx:id="totalPriceLabel" text="0" style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;"/>
    </HBox>

    <Button fx:id="continueBtn" text="Continue to Summary"
            layoutX="80" layoutY="500" prefWidth="200"
            onAction="#goSummary"
            style="-fx-background-color: #e50914; -fx-text-fill:white; -fx-font-size:16px; -fx-font-weight:bold;"/>

</AnchorPane>
